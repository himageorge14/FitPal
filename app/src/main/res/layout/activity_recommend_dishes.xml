                        android:text="DINNER"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
