<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fmain_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:columnCount="2"
    android:rowCount="11"
    tools:context=".FriendDetails"
    android:padding="10dp"
    android:descendantFocusability="beforeDescendants"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/green_border"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Average Calories per day:"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_row="1"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/freport_avg_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:padding="8dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:text="Average Carbs per day:"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_row="0"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/freport_avg_carb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:padding="8dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Average Fats per day:"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/freport_avg_fats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:padding="8dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Average Protein per day :"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_row="7"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/freport_avg_prot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:padding="8dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Average Fiber per day :"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_row="7"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/freport_avg_fiber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="1"
                android:padding="8dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Current BMI Score :"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_column="0"
                android:layout_row="5"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/freport_bmi_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="1"
                android:padding="8dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="15dp" />



        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="Previous Meals"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:id="@+id/friendDetailsRecyclerID"
            android:orientation="vertical"></androidx.recyclerview.widget.RecyclerView>


</LinearLayout>